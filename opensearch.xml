<?xml version="1.0" encoding="UTF-8"?>
<OpenSearchDescription xmlns:moz="http://www.mozilla.org/2006/browser/search/"
                       xmlns="http://a9.com/-/spec/opensearch/1.1/">
  <ShortName>{{ site.title }}</ShortName>
  <Description>{% if site.google.cse_id %}Search{% else %}Use Google to search{% endif %} {{ site.title }}</Description>
  <InputEncoding>UTF-8</InputEncoding>
  <Url type="application/rss+xml"
       template="{% if site.google.cse_id %}{{ '/search/?' | prepend: site.baseurl | replace: '//', '/' | prepend: site.url }}{% else %}{{ '&amp;' | prepend: site.baseurl | prepend: site.url | prepend: 'https://www.google.com/search?as_sitesearch=' }}{% endif %}q={searchTerms}"/>
</OpenSearchDescription>